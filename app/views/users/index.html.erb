<h1>all users</h1>
<li class="nav-item">
<%= link_to "/users/sign_out", method: :delete do %>
            <h3>sign out</h3>
<%end%>
</li>
<% @users.each do |user| %>
<div class="row">
  <div class="col-sm-3">
    <div class="card-photo">
    <%= image_tag "cover-photo.jpg", alt: "user", class: "user_image", :size =>'80x80' %>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="card">
      <div class="card-body place-items-start ">
        <h5 class="card-title"><%= link_to user.name, user_path(user) %></h5>
        <p class="card-text text-right">number of posts:<span class="mx-2"><%=user.posts_counter || 0%></span></p>
      </div>
    </div>
  </div>
</div>
<%end%>
